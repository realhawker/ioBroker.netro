{
  "name": "iobroker.netro",
  "version": "0.0.7",
  "description": "Adapter for Netro components",
  "author": {
    "name": "realhawker",
    "email": "jan-gerrit@schettler-koehler.de"
  },
  "homepage": "https://github.com/realhawker/ioBroker.netro",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "template",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/realhawker/ioBroker.netro.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.5.1",
    "cross-fetch": "^3.1.6"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.1",
    "@iobroker/testing": "^2.6.0",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.6",
    "@types/gulp": "^4.0.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.17.19",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "axios": "^0.27.2",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gulp": "^4.0.2",
    "mocha": "^9.2.2",
    "prettier": "^2.8.8",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/realhawker/ioBroker.netro/issues"
  },
  "readmeFilename": "README.md"
}
